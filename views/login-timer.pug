extends layout/layout

block content
    div.container-fluid.no-gutters.login-register.p-0
        div.row.no-gutters
            div.col-lg-7.d-flex.align-content-center.flex-wrap.justify-content-center.min-vh-100
                div.login-container.text-center
                    img.img(src=prefix + "/images/login-image.svg", width='348', height='77')
                    div.login-window
                        p.login-window-title Telefonunuza şifre gönderdik
                        p.login-window-subtitle Lütfen <b>+905322305782</b> numaralı telefona gönderdiğimiz SMS ile gelen şifreyi girin

                        div.login.login-timer
                        form(method="POST")
                            div.row.pin-code-wrapper
                                div.col-2
                                    div.form-group
                                        input(type="text", class="form-control text-center password-code", data-place="1", maxlength="1", id="First", name="First", pattern="\d*")
                                div.col-2
                                    div.form-group
                                        input(type="text", class="form-control text-center password-code", data-place="2", maxlength="1", id="Second", name="Second", pattern="\d*")
                                div.col-2
                                    div.form-group
                                        input(type="text", class="form-control text-center password-code", data-place="3", maxlength="1", id="Third", name="Third", pattern="\d*")
                                div.col-2
                                    div.form-group
                                        input(type="text", class="form-control text-center password-code", data-place="4", maxlength="1", id="Fourth", name="Fourth", pattern="\d*")
                                div.col-2
                                    div.form-group
                                        input(type="text", class="form-control text-center password-code", data-place="5", maxlength="1", id="Fifth", name="Fifth", pattern="\d*")
                            input#Token(type="hidden", name="Token")
                            div.d-flex.justify-content-start.send-code-timer
                                a.d-none#send-code-again Kodu Yeniden Gönder
                                p#count.d-flex.align-content-center.flex-wrap 20
                            input(type="submit", class="mt-3", value="Tamam")
            div.col-lg-5.logo-area.d-none.d-lg-flex.align-content-center.flex-wrap.justify-content-center.vh-100
                img.img(src=prefix + "/images/kultur-turizm-bakanligi.png", width='223', height='146', class="mr-5")
                img.img(src=prefix + "/images/baskent-kultur-yolu.svg", width='163', height='102', class="mt-4")

