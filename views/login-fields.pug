extends layout/layout

block content
    div.container-fluid.no-gutters.login-register.p-0
        div.row.no-gutters
            div.col-lg-7.d-flex.align-content-center.flex-wrap.justify-content-center.min-vh-100
                div.login-container.text-center
                    img.img(src=prefix + "/images/login-image.svg", width='348', height='77')
                    div.login-window.register.text-left
                        p.login-window-title Aramıza şimdiden hoş geldiniz.
                        p.login-window-subtitle Lütfen profilinizi oluşturun.

                        form.login-form(data-parsley-validate="")
                            div.login-form-item
                                p Adınızı
                                input(type="text", placeholder="Giriniz", required="", data-parsley-required-message="Lütfen bu alanı boş bırakmayınız")
                            div.login-form-item
                                p Soyadınızı
                                input(type="text", placeholder="Giriniz", required="", data-parsley-required-message="Lütfen bu alanı boş bırakmayınız")
                            div.login-form-item
                                p E-posta
                                input(type="text", placeholder="Giriniz", required="", data-parsley-required-message="Lütfen bu alanı boş bırakmayınız")

                            div.login-form-item
                                label(for="uyelik-izinleri")
                                    span.item <b>KVKK aydınlatma metni</b>’ni onaylıyorum
                                    input(type="checkbox", id="uyelik-izinleri", name="uyelik-izinleri" value="Konser", required="", data-parsley-required-message="Lütfen bu alanı boş bırakmayınız")
                                    span.checkmark
                                        em.icon.icon-check

                            div.login-form-item
                                label(for="iletisim-izinleri")
                                    span.item İletişim izni ile ilgili <b>gerekli izinler</b>
                                    input(type="checkbox", id="iletisim-izinleri", name="iletisim-izinleri" value="Konser")
                                    span.checkmark
                                        em.icon.icon-check

                            input(type="submit", class="mt-3", value="Tamam")
            div.col-lg-5.logo-area.d-none.d-lg-flex.align-content-center.flex-wrap.justify-content-center.vh-100
                img.img(src=prefix + "/images/kultur-turizm-bakanligi.png", width='223', height='146', class="mr-5")
                img.img(src=prefix + "/images/baskent-kultur-yolu.svg", width='163', height='102', class="mt-4")

